extends ../layout

block content
  .container
    .row
      .col-md-5
        form(method="post", action="/user/register")
          .modal-body
            .form-group.col-md-4
              label(for="signupName") 用户名
              input#signupName.form-control(name="username", type="text")
            .form-group.col-md-4
              label(for="signupPassword") 密码
              input#signupPassword.form-control(name="password", type="password")
          .modal-footer
            button.btn.btn-default(type="button", data-dismiss="modal") 关闭
            button.btn.btn-success(type="submit") 提交