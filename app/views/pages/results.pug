extends ../layout

block content
  .container
    .row
      .panel.panel-default
        .panel-heading
          h3 #{keyword}
        .panel-body
          if books && books.length > 0
            each item in books
              .col-md-3
                .thumbnail
                  a(href="/book/" + item._id )
                    img(src='/img/books/小王子.jpg', alt=item.url) 
                  .caption
                    h4.text-center #{item.title}
                    a.btn.btn-info(href="/book/" + item._id, role="button") 购买
                    span &nbsp;&nbsp;
                    span#incart.glyphicon.glyphicon-shopping-cart.btn.btn-success.pull-right &nbsp;加入购物车
      ul.pagination
        - for (var i = 0; i < totalPage; i++) {
          - if (currentPage == (i + 1)) {
              li.active
                span #{currentPage}
          - }
          - else {
              li
                a(href='/results?' + query + '&p='+ i) #{i + 1}
          - }
        - }