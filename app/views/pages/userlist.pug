extends ../layout

block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 用户名
            th 创建时间
            th 权限值
            th 修改
            th 删除
        tbody
          each item in users
            tr(class="item-id-" + item._id)
              td #{item.username}
              td #{moment(item.meta.createAt).format('MM/DD/YYYY')}
              td
                input.role(type='number', name='role', value=item.role)
              td: a.btn.btn-warning.update(target="_blank", data-id=item._id) 修改权限
              td
                button.btn.btn-danger.del(type="button", data-id=item._id) 删除


  script(src="/js/pages/adminuser.js")